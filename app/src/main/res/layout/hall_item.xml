<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hall_picture"
            android:layout_width="100dp"
            android:layout_height="70dp"
            fresco:placeholderImage="@mipmap/test02"
            android:layout_marginLeft="15dp"
            fresco:actualImageScaleType="centerInside"
            fresco:roundAsCircle="false"
            fresco:roundingBorderColor="@color/white"
            fresco:roundingBorderWidth="1dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anhui to shanghai"
                android:textSize="16sp"
                android:textColor="@color/item_title_font"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="大货车5辆 中小型车10辆"
                android:textSize="16sp"
                android:textColor="@color/item_title_font"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:layout_marginTop="15dp"
                android:text="2019-04-05 20:00"
                android:textSize="14sp"
                android:textColor="@color/item_content_font"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="105dp"
        android:background="@color/divider_color_dan"/>


</LinearLayout>